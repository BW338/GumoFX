<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobox3"
    tools:context="gcom.example.gumoc.box">


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/fu"
            android:layout_width="71dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:onClick="fuzzilla"
            app:srcCompat="@drawable/f1200" />


        <ImageView
            android:id="@+id/ap"
            android:layout_width="71dp"
            android:layout_height="114dp"
            android:onClick="apocalipsis"
            android:tag="a"
            app:srcCompat="@drawable/a1200" />

        <ImageView
            android:id="@+id/an"
            android:layout_width="71dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:onClick="andromeda"
            app:srcCompat="@drawable/an1200" />

        <ImageView
            android:id="@+id/li"
            android:layout_width="71dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:onClick="lighthouse"
            app:srcCompat="@drawable/l1200" />

        <ImageView
            android:id="@+id/na"
            android:layout_width="71dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:onClick="Nautilus"
            app:srcCompat="@drawable/n1200" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ana"
            android:layout_width="172dp"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/an1200" />


        <ImageView
            android:id="@+id/lia"
            android:layout_width="172dp"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/l1200" />

        <ImageView
            android:id="@+id/naa"
            android:layout_width="172dp"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:verticalScrollbarPosition="right"
            android:visibility="visible"
            app:srcCompat="@drawable/n1200" />


        <ImageView
            android:id="@+id/fua"
            android:layout_width="172dp"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/f1200" />


        <ImageView
            android:id="@+id/apa"
            android:layout_width="172dp"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:tag="a"
            android:visibility="visible"
            app:srcCompat="@drawable/a1200" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-90dp"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Switch
            android:id="@+id/bypas"
            android:layout_width="106dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:onClick="bypass"
            android:paddingVertical="4dp"
            android:text="Clean"
            android:textColor="#C7C8CC"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/playb"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:onClick="playb"
            app:srcCompat="@drawable/play1" />

        <ImageButton
            android:id="@+id/pausab"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:onClick="pausa"
            app:srcCompat="@drawable/pausa1" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:onClick="stop"
            app:srcCompat="@drawable/stop" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>